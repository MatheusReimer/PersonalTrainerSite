    <script>
            function cookieDeleteAdmin(){
                                   

                    var cookieValue =  localStorage.getItem('adminUserEmail');
                    
                    document.cookie = "adminUser=" + cookieValue + ";expires="+new Date(2018,12,25).toUTCString();
        }
             function cookieDelete(){
                                   

